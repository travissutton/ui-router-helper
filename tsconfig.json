{
  "compilerOptions": {
    "inlineSources": false,
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "filesGlob": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages"
  ],
  "rootDirs": [
    "src/"
  ]
}
